{
  "name": "blogsite-rspress",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "rspress build",
    "dev": "rspress dev",
    "preview": "rspress preview",
    "lint": "biome lint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
