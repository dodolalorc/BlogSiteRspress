    "src/*_/_.{js,vue}": [
      "npm run lint",
      "git add"
    ]
  },
  "dependencies": {
    "@rspress/shared": "^1.43.13",
    "postcss": "^8.5.3",
    "rehype-katex": "^7.0.1",
    "remark-math": "^5.0.0",
    "rspress": "^1.40.2",
    "rspress-plugin-devkit": "^0.3.0",
    "rspress-plugin-mermaid": "^0.3.0",
    "rspress-plugin-reading-time": "^0.3.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@iconify-json/hugeicons": "^1.2.5",
    "@types/node": "^18.11.17",
    "@unocss/postcss": "^66.1.2",
    "@unocss/preset-icons": "^66.1.2",
    "commitlint": "^19.8.1",
    "commitlint-config-gitmoji": "^2.3.1",
    "husky": "^9.1.7",
    "unocss": "^66.1.2"
  }
}